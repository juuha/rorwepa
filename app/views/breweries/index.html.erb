<h1>Listing breweries</h1>

<% cache 'brewerylist', skip_digest: true do %>

<h2>Active </h2>

<p> Number of active breweries: <%= @active_breweries.count %> </p>

<%= render 'list', breweries: @active_breweries %>

<h2>Inactive </h2>

<p> Number of inactive breweries: <%= @inactive_breweries.count %> </p>

<%= render 'list', breweries: @inactive_breweries %>

<% end %>

<%= link_to('New Brewery', new_brewery_path, class:'btn btn-success') if current_user %>

<%= link_to('List of beers', beers_path, class:'btn btn-primary') %>
